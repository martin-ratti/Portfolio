---
import { getLangFromUrl, useTranslations } from "../i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section
    class="min-h-[90vh] flex flex-col justify-center items-center text-center px-4 relative overflow-hidden pt-24 md:pt-32"
>
    <div
        class="absolute top-0 left-1/2 -translate-x-1/2 w-[500px] h-[500px] bg-violet-600/30 rounded-full blur-[100px] -z-10 animate-pulse"
    >
    </div>

    <div class="space-y-6 max-w-4xl z-10">
        <div class="animate-fade-in-up" style="animation-delay: 0.1s">
            <span
                class="inline-block px-3 py-1 text-sm font-medium text-cyan-700 dark:text-cyan-400 bg-cyan-100/50 dark:bg-cyan-950/30 border border-cyan-200 dark:border-cyan-800 rounded-full"
            >
                {t("hero.available")}
            </span>
        </div>

        <h1
            class="text-6xl md:text-8xl font-bold tracking-tight animate-fade-in-up text-slate-900 dark:text-white"
            style="animation-delay: 0.2s"
        >
            {t("hero.greeting")}
            <br />
            <span class="text-gradient">Martín Ratti</span>
        </h1>

        <p
            class="text-xl md:text-2xl text-slate-600 dark:text-slate-400 max-w-2xl mx-auto animate-fade-in-up"
            style="animation-delay: 0.3s"
        >
            {t("hero.role")}
            <span
                class="inline-flex min-w-[120px] justify-start text-left relative"
            >
                <span id="typewriter-text" class="font-bold"></span>
                <span class="animate-blink ml-1">|</span>
            </span>
        </p>

        <script>
            const words = [
                {
                    text: "Astro",
                    color: "text-violet-600 dark:text-violet-400",
                },
                { text: "React", color: "text-cyan-600 dark:text-cyan-400" },
                {
                    text: "Node.js",
                    color: "text-emerald-600 dark:text-emerald-400",
                },
                {
                    text: "Python",
                    color: "text-yellow-600 dark:text-yellow-400",
                },
                { text: ".NET", color: "text-purple-600 dark:text-purple-400" },
            ];

            let typeTimeout: ReturnType<typeof setTimeout>;
            let wordIndex = 0;
            let charIndex = 0;
            let isDeleting = false;

            function type(textElement: HTMLElement) {
                const currentWord = words[wordIndex];

                if (!textElement) return;

                textElement.className = `font-bold ${currentWord.color}`;

                if (isDeleting) {
                    textElement.textContent = currentWord.text.substring(
                        0,
                        charIndex - 1,
                    );
                    charIndex--;
                } else {
                    textElement.textContent = currentWord.text.substring(
                        0,
                        charIndex + 1,
                    );
                    charIndex++;
                }

                let typeSpeed = isDeleting ? 50 : 100;

                if (!isDeleting && charIndex === currentWord.text.length) {
                    typeSpeed = 2000;
                    isDeleting = true;
                } else if (isDeleting && charIndex === 0) {
                    isDeleting = false;
                    wordIndex = (wordIndex + 1) % words.length;
                    typeSpeed = 500;
                }

                typeTimeout = setTimeout(() => type(textElement), typeSpeed);
            }

            function initTypewriter() {
                clearTimeout(typeTimeout);
                const textElement = document.getElementById("typewriter-text");
                if (textElement) {
                    type(textElement);
                }
            }

            document.addEventListener("astro:page-load", initTypewriter);
        </script>

        <style>
            @keyframes blink {
                0%,
                100% {
                    opacity: 1;
                }
                50% {
                    opacity: 0;
                }
            }
            .animate-blink {
                animation: blink 1s infinite;
            }
            #typewriter-text::before {
                content: "\200b";
            }
        </style>

        <div
            class="flex flex-wrap gap-4 justify-center pt-8 animate-fade-in-up"
            style="animation-delay: 0.4s"
        >
            <a
                href="#proyectos"
                class="px-8 py-3 glass-card bg-slate-900/10 dark:bg-white/10 hover:bg-slate-900/15 dark:hover:bg-white/20 border-slate-300 dark:border-slate-600 text-slate-900 dark:text-white font-semibold rounded-full transition-all min-w-[160px] flex justify-center items-center"
            >
                {t("hero.viewProjects")}
            </a>
            <a
                href="#contacto"
                class="px-8 py-3 glass-card hover:bg-slate-100/50 dark:hover:bg-slate-800/50 rounded-full font-medium transition-all border-slate-200 dark:border-slate-700 text-slate-700 dark:text-slate-300 min-w-[160px] flex justify-center items-center"
            >
                {t("hero.contactMe")}
            </a>
            <button
                onclick="alert('¡El CV estará disponible próximamente!')"
                class="px-8 py-3 glass-card hover:bg-slate-100/50 dark:hover:bg-slate-800/50 rounded-full font-medium transition-all border-slate-200 dark:border-slate-700 text-slate-700 dark:text-slate-300 flex items-center justify-center gap-2 group min-w-[160px]"
            >
                <svg
                    xmlns="http://www.w3.org/2000/svg"
                    class="h-5 w-5 group-hover:translate-y-0.5 transition-transform"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
                >
                    <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"
                    ></path>
                </svg>
                CV
            </button>
        </div>
    </div>
</section>
