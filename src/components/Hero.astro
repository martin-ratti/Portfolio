---
import { getLangFromUrl, useTranslations } from "../i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section
    class="min-h-[90vh] flex flex-col justify-center items-center text-center px-4 relative overflow-hidden"
>
    <div
        class="absolute top-0 left-1/2 -translate-x-1/2 w-[500px] h-[500px] bg-violet-600/30 rounded-full blur-[100px] -z-10 animate-pulse"
    >
    </div>

    <div class="space-y-6 max-w-4xl z-10">
        <div class="animate-fade-in-up" style="animation-delay: 0.1s">
            <span
                class="inline-block px-3 py-1 text-sm font-medium text-cyan-400 bg-cyan-950/30 border border-cyan-800 rounded-full"
            >
                {t("hero.available")}
            </span>
        </div>

        <h1
            class="text-6xl md:text-8xl font-bold tracking-tight animate-fade-in-up"
            style="animation-delay: 0.2s"
        >
            {t("hero.greeting")}
            <br />
            <span class="text-gradient">Mart√≠n Ratti</span>
        </h1>

        <p
            class="text-xl md:text-2xl text-slate-400 max-w-2xl mx-auto animate-fade-in-up"
            style="animation-delay: 0.3s"
        >
            {t("hero.role")}
            <span class="text-violet-400">Astro</span>, <span
                class="text-cyan-400">React</span
            > y <span class="text-fuchsia-400">Node.js</span>.
        </p>

        <div
            class="flex flex-wrap gap-4 justify-center pt-8 animate-fade-in-up"
            style="animation-delay: 0.4s"
        >
            <a
                href="#proyectos"
                class="px-8 py-3 bg-white text-slate-950 font-semibold rounded-full hover:scale-105 transition-transform"
            >
                {t("hero.viewProjects")}
            </a>
            <a
                href="#contacto"
                class="px-8 py-3 glass-card hover:bg-slate-800/50 rounded-full font-medium transition-all border-slate-700"
            >
                {t("hero.contactMe")}
            </a>
        </div>
    </div>
</section>
