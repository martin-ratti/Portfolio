---
import { getLangFromUrl } from "../i18n/utils";
import type { Project } from "../data/projects";

interface Props {
    project: Project;
    index: number;
    featured?: boolean;
    baseDelay?: number;
}

const { project, index, featured = false, baseDelay = 0 } = Astro.props;
const lang = getLangFromUrl(Astro.url);
const delay = (baseDelay + index * 0.1).toFixed(1);
---

<article
    class={`project-card glass-card rounded-2xl p-6 hover:border-violet-500/50 transition-all duration-500 group relative overflow-hidden animate-fade-in-up ${featured ? "md:p-8" : "flex flex-col h-full"}`}
    style={`animation-delay: ${delay}s`}
    data-techs={JSON.stringify(project.tags)}
>
    {
        featured && (
            <div class="absolute inset-0 bg-linear-to-br from-violet-500/5 to-transparent opacity-0 group-hover:opacity-100 transition-opacity" />
        )
    }
    {
        !featured && (
            <div class="absolute inset-0 bg-linear-to-br from-violet-500/5 to-transparent opacity-0 group-hover:opacity-100 transition-opacity pointer-events-none" />
        )
    }

    <div class="relative z-10 flex flex-col h-full">
        <div class="flex justify-between items-start mb-4">
            <h3
                class={`font-bold text-slate-900 dark:text-white group-hover:text-violet-600 dark:group-hover:text-violet-300 transition-colors ${featured ? "text-2xl" : "text-lg"}`}
            >
                {project.title}
            </h3>
            <div class="flex gap-2">
                <a
                    href={project.repo}
                    target="_blank"
                    class="p-2 bg-slate-100 dark:bg-slate-800 rounded-full hover:bg-slate-200 dark:hover:bg-slate-700 transition"
                    aria-label="GitHub Repo"
                >
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        width={featured ? "20" : "18"}
                        height={featured ? "20" : "18"}
                        viewBox="0 0 24 24"
                        fill="currentColor"
                    >
                        <path
                            d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"
                        ></path>
                    </svg>
                </a>
                {
                    project.link && (
                        <a
                            href={project.link}
                            target="_blank"
                            class="p-2 bg-violet-600 rounded-full hover:bg-violet-500 transition text-white"
                            aria-label="Live Demo"
                        >
                            <svg
                                xmlns="http://www.w3.org/2000/svg"
                                width={featured ? "20" : "18"}
                                height={featured ? "20" : "18"}
                                viewBox="0 0 24 24"
                                fill="none"
                                stroke="currentColor"
                                stroke-width="2"
                                stroke-linecap="round"
                                stroke-linejoin="round"
                            >
                                <>
                                    <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6" />
                                    <polyline points="15 3 21 3 21 9" />
                                    <line x1="10" y1="14" x2="21" y2="3" />
                                </>
                            </svg>
                        </a>
                    )
                }
            </div>
        </div>
        <p class="text-slate-600 dark:text-slate-400 grow leading-relaxed">
            {project.description[lang]}
        </p>
        <div class="flex flex-wrap gap-2 mt-auto pt-4">
            {
                project.tags.map((tag) => (
                    <span class="px-3 py-1 text-xs font-medium text-violet-600 dark:text-violet-300 bg-violet-100 dark:bg-violet-900/30 rounded-full border border-violet-200 dark:border-violet-800/50">
                        {tag}
                    </span>
                ))
            }
        </div>
    </div>
</article>
