---
import { getLangFromUrl, useTranslations } from "../i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section id="contacto" class="py-20 px-4">
    <div
        class="glass-card max-w-4xl mx-auto rounded-3xl p-8 md:p-12 text-center relative overflow-hidden animate-fade-in-up"
    >
        <!-- Background blob -->
        <div
            class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[300px] h-[300px] bg-violet-600/20 rounded-full blur-[80px] -z-10"
        >
        </div>

        <h2
            class="text-4xl md:text-5xl font-bold mb-6 text-slate-900 dark:text-white"
        >
            {t("contact.title")}
        </h2>

        <p
            class="text-xl text-slate-600 dark:text-slate-300 mb-10 max-w-2xl mx-auto leading-relaxed"
        >
            {t("contact.desc")}
        </p>

        <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <a
                href="mailto:martinratti99@gmail.com"
                class="inline-flex items-center justify-center gap-2 px-8 py-3 bg-white border border-slate-200 dark:border-transparent text-slate-900 font-bold rounded-full hover:bg-slate-50 transition"
            >
                <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="20"
                    height="20"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    ><rect width="20" height="16" x="2" y="4" rx="2"
                    ></rect><path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"
                    ></path></svg
                >
                {t("contact.button")}
            </a>
            <a
                href="https://github.com/martin-ratti"
                target="_blank"
                class="inline-flex items-center justify-center gap-2 px-8 py-3 glass-card border border-slate-200 dark:border-slate-700 font-medium rounded-full hover:bg-slate-100/50 dark:hover:bg-slate-800 transition text-slate-700 dark:text-slate-300"
            >
                <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="20"
                    height="20"
                    viewBox="0 0 24 24"
                    fill="currentColor"
                    ><path
                        d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"
                    ></path></svg
                >
                GitHub Profile
            </a>
        </div>
    </div>
</section>
