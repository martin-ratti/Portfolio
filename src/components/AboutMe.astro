---
import { getLangFromUrl, useTranslations } from "../i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section id="sobre-mi" class="py-20 px-4 max-w-6xl mx-auto">
    <h2
        class="text-3xl font-bold mb-12 text-center flex items-center justify-center gap-3"
    >
        <svg
            xmlns="http://www.w3.org/2000/svg"
            width="32"
            height="32"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            class="text-violet-400"
            ><path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path><circle
                cx="12"
                cy="7"
                r="4"></circle></svg
        >
        {t("about.title")}
    </h2>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <!-- Card Principal: Presentación -->
        <article
            class="md:col-span-2 glass-card p-8 rounded-2xl flex flex-col justify-center relative overflow-hidden group"
        >
            <div
                class="absolute inset-0 bg-linear-to-br from-violet-500/10 to-transparent opacity-0 group-hover:opacity-100 transition-opacity"
            >
            </div>
            <p
                class="text-lg text-slate-600 dark:text-slate-300 leading-relaxed relative z-10"
            >
                {t("about.story")}
            </p>
            <p
                class="text-lg text-slate-600 dark:text-slate-300 leading-relaxed mt-4 relative z-10"
            >
                {t("about.specialty")}
            </p>
        </article>

        <!-- Card: Foto o Avatar -->
        <article
            class="glass-card rounded-2xl p-4 flex items-center justify-center bg-slate-100/50 dark:bg-slate-800/50"
        >
            <!-- Placeholder for an image. The user can replace this later -->
            <div
                class="w-full h-full min-h-[200px] bg-slate-200/50 dark:bg-slate-700/50 rounded-xl flex items-center justify-center text-slate-400 dark:text-slate-500 relative overflow-hidden"
            >
                <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="64"
                    height="64"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="1"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    class="opacity-50"
                    ><rect width="18" height="18" x="3" y="3" rx="2" ry="2"
                    ></rect><circle cx="9" cy="9" r="2"></circle><path
                        d="m21 15-3.086-3.086a2 2 0 0 0-2.828 0L6 21"
                    ></path></svg
                >
                <div
                    class="absolute inset-0 flex items-center justify-center bg-slate-900/40 opacity-0 hover:opacity-100 transition-opacity cursor-pointer"
                >
                    <span class="text-sm font-medium text-white"
                        >Tu foto aquí</span
                    >
                </div>
            </div>
        </article>

        <!-- Card: Estudios / Enfoque -->
        <article
            class="glass-card p-6 rounded-2xl md:col-span-1 flex flex-col justify-center hover:bg-slate-100/60 dark:hover:bg-slate-800/60 transition-colors"
        >
            <h3
                class="text-xl font-bold text-fuchsia-500 dark:text-fuchsia-300 mb-2"
            >
                {t("about.education.title")}
            </h3>
            <p class="text-slate-600 dark:text-slate-400">
                {t("about.education.desc")}
            </p>
        </article>

        <!-- Card: Soft Skills / Filosofía -->
        <article
            class="glass-card p-6 rounded-2xl md:col-span-2 flex flex-col justify-center hover:bg-slate-800/60 transition-colors"
        >
            <h3
                class="text-xl font-bold text-emerald-600 dark:text-emerald-300 mb-2"
            >
                {t("about.skills.title")}
            </h3>
            <div class="flex flex-wrap gap-2 mt-2">
                <span
                    class="px-3 py-1 bg-emerald-100 dark:bg-emerald-900/30 text-emerald-700 dark:text-emerald-200 rounded-full text-sm border border-emerald-200 dark:border-emerald-800/50"
                    >{t("about.skills.proactive")}</span
                >
                <span
                    class="px-3 py-1 bg-emerald-100 dark:bg-emerald-900/30 text-emerald-700 dark:text-emerald-200 rounded-full text-sm border border-emerald-200 dark:border-emerald-800/50"
                    >{t("about.skills.curious")}</span
                >
                <span
                    class="px-3 py-1 bg-emerald-100 dark:bg-emerald-900/30 text-emerald-700 dark:text-emerald-200 rounded-full text-sm border border-emerald-200 dark:border-emerald-800/50"
                    >{t("about.skills.solution")}</span
                >
                <span
                    class="px-3 py-1 bg-emerald-100 dark:bg-emerald-900/30 text-emerald-700 dark:text-emerald-200 rounded-full text-sm border border-emerald-200 dark:border-emerald-800/50"
                    >{t("about.skills.clean")}</span
                >
            </div>
        </article>
    </div>
</section>
